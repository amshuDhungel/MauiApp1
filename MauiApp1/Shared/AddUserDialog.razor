<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="addUser.Username" Label="Username" T="string" />
        <MudTextField @bind-Value="addUser.Password" Label="Password" T="string" />
        <MudRadioGroup @bind-SelectedOption="addUser.Role">
            <MudRadio Option="@(Role.Staff)">@Role.Staff</MudRadio>
                <MudRadio Option="@(Role.Admin)">@Role.Admin</MudRadio>
            </MudRadioGroup>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
        </DialogActions>
    </MudDialog>


    @code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public AddUser addUser { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
